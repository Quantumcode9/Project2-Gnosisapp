<%- include('../partials/header.ejs'); %>
<h1>Latest TV Shows</h1>
<div class="show-list">
    <% shows.forEach(show => { %>
        <div id="show_<%= show.id %>" class="show">
                <img src="https://image.tmdb.org/t/p/w500<%= show.poster_path %>" alt="<%= show.name %>">
                <h2><%= show.name %></h2>
                <%- include('../partials/buttons', { show: show, userId: userId }) %>
        </div>
    <% }) %>
</div>
</body>

