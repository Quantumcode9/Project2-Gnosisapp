<%- include('../partials/header') %>

<script>
  // Make userId available globally
  window.userId = "<%= userId %>";
</script>

<main>
    <div class="container-center">
        <form id="searchForm" action="/search" method="get" class="d-flex justify-content-center"> 
            <input type="text" name="search" id="searchInput" class="form-control me-2" placeholder="Search for a TV show" style="width: 300px;">
            <input type="hidden" name="userId" value="<%= userId %>">
            <button type="submit" class="btn btn-outline-primary">Search</button>
        </form>
    </div>
    
    <!-- Remove the placeholder forms, they're causing issues -->
    
    <div id="searchResults" class="search-results-container"></div>
</main>

<%- include('../partials/footer') %>

<script src="/script.js"></script>













