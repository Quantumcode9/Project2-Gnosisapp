
<%- include('../partials/header') %>
<main>
    <div class="container-center">
        <form id="searchForm" action="/search" method="get" class="d-flex justify-content-center"> 
            <input type="text" name="search" id="searchInput" class="form-control me-2" placeholder="Search for a TV show" style="width: 300px;">
            <input type="hidden" name="userId" value="<%= userId %>">
            <button type="submit" class="btn btn-outline-primary">Search</button>
        </form>
    </div> 
    <form class="favorite-form">
        <input type="hidden" name="userId" value="<%= userId %>">
        <input type="hidden" name="id" value="${show.id}">
        <input type="hidden" name="name" value="${show.name}">
        <input type="hidden" name="poster_path" value="${show.poster_path}">
        <button type="submit" class="icon-button">
          <img class="icon" src="/images/Favorites.png" alt="Add to Favorites">
        </button>
      </form>

    <div id="searchResults"></div>
</main>
<%- include('../partials/footer') %>
<script>
    const userId = '<%= userId %>';
  </script>
<script src="/script.js"></script> 















