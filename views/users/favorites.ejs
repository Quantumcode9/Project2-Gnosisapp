<%- include('../partials/header') %>
<body>
    <h1>Your Favorite Shows</h1>
    <div class="show-list">
        <% favorites.forEach(show => { %>
            <div class="show">
                <% if (show.poster_path) { %>
                    <img src="https://image.tmdb.org/t/p/w500<%= show.poster_path %>" alt="<%= show.name %>">
                <% } else { %>
                    <img src="/images/Untitled.png" alt="No image available">
                <% } %>
                <h3><%= show.name %></h3>
            </div>
        <% }); %>
    </div>
</body>
</html>
